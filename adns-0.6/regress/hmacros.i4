m4_define(`hm_args_massage',
	`m4_ifelse(
		m4_patsubst(
				$1,
				`hm_comma\|[
	 ]+',
				`'),
		`',
		`$2',
		`
	m4_patsubst(m4_patsubst(m4_patsubst(m4_translit($1, `
	',` '), `\(hm_comma *\)*$', `'), `^\( *hm_comma\)*', `'),
		`\( *hm_comma *\)+',` hm_comma ')
	')')

