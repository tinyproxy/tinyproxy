 m4_define(`hm_arg_ign', `')
 m4_define(`hm_arg_fd', `')
 m4_define(`hm_arg_fcntl_cmd_arg',`')
 m4_define(`hm_arg_addr_in', `')
 m4_define(`hm_arg_bytes_in', `')
